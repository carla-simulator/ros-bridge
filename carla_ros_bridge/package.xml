<?xml version="1.0"?>
<package format="3">
  <name>carla_ros_bridge</name>
  <version>0.0.1</version>
  <description>The carla_ros_bridge package</description>
  <maintainer email="carla.simulator@gmail.com">CARLA Simulator Team</maintainer>
  <license>MIT</license>

  <!-- ROS 2 DEPENDENCIES-->
  <depend condition="$ROS_VERSION == 2">rclpy</depend>

  <!-- ROS 1 DEPENDENCIES-->
  <buildtool_depend condition="$ROS_VERSION == 1">catkin</buildtool_depend>
  <build_depend condition="$ROS_VERSION == 1">roslaunch</build_depend>
  <build_depend condition="$ROS_VERSION == 1">ainstein_radar_msgs</build_depend>
  <exec_depend condition="$ROS_VERSION == 1">rospy</exec_depend>
  <exec_depend condition="$ROS_VERSION == 1">sensor_msgs</exec_depend>
  <exec_depend condition="$ROS_VERSION == 1">visualization_msgs</exec_depend>
  <exec_depend condition="$ROS_VERSION == 1">tf</exec_depend>
  <exec_depend condition="$ROS_VERSION == 1">tf2</exec_depend>
  <exec_depend condition="$ROS_VERSION == 1">rviz</exec_depend>
  <exec_depend condition="$ROS_VERSION == 1">geometry_msgs</exec_depend>
  <exec_depend condition="$ROS_VERSION == 1">std_msgs</exec_depend>
  <exec_depend condition="$ROS_VERSION == 1">rosbag_storage</exec_depend>
  <exec_depend condition="$ROS_VERSION == 1">derived_object_msgs</exec_depend>
  <exec_depend condition="$ROS_VERSION == 1">shape_msgs</exec_depend>
  <exec_depend condition="$ROS_VERSION == 1">nav_msgs</exec_depend>
  <exec_depend condition="$ROS_VERSION == 1">tf2_msgs</exec_depend>
  <exec_depend condition="$ROS_VERSION == 1">rosgraph_msgs</exec_depend>
  <exec_depend condition="$ROS_VERSION == 1">cv_bridge</exec_depend>
  <exec_depend condition="$ROS_VERSION == 1">carla_msgs</exec_depend>
  <exec_depend condition="$ROS_VERSION == 1">carla_ego_vehicle</exec_depend>
  <exec_depend condition="$ROS_VERSION == 1">carla_manual_control</exec_depend>

  <export>
    <build_type condition="$ROS_VERSION == 1">catkin</build_type>
    <build_type condition="$ROS_VERSION == 2">ament_python</build_type>
  </export>
</package>
